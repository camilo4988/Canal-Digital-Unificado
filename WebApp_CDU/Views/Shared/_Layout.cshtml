@using WebApp_CDU.Models;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Canal Digita Unificado</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://www.google.com/recaptcha/api.js?hl=es&onload=onloadCallback&render=explicit" async defer></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @if (Session["Cliente"] != null)
            {
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        @if (Singleton.Instance.ConfiguracionEntorno.ActualizacionDatosCliente) {
                            <span class="icon-bar"></span>
                        }
                        <span class="icon-bar"></span>
                        <!--<span class="icon-bar"></span>-->
                    </button>
                    @*Html.ActionLink("", "Index", "Home", new { area = "" }, new { @class = "" })*@
                    <a href="javascript:VerInformacionCliente();" class="navbar-brand">CDU - Canal Digita Unificado</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Singleton.Instance.ConfiguracionEntorno.ActualizacionDatosCliente)
                        {
                            <li><a href="javascript:MostrarActualizacionDatos();">Actualización de Datos</a></li>
                        }
                        <li><a href="javascript:Alerta.PreguntaCerrarSesion();">Salir</a></li>                        
                        <!--<li>@Html.ActionLink("Contacto", "Contact", "Home")</li>-->
                    </ul>
                </div>
            }
            else
            {
                <div class="navbar-header">
                    <p class="navbar-brand">CDU - Canal Digita Unificado</p>
                </div>
            }
        </div>
    </div>
    <div class="container body-content" id="contenido">
        <div id="contenido">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Laboratorio de Desarrollo de Software - EAFIT</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/alertify")
    @RenderSection("scripts", required: false)
    <script src="~/Themes/Scripts/Clientes.js"></script>
    <script src="~/Themes/Scripts/Productos.js"></script>
    <script src="~/Themes/Scripts/Alertas.js"></script>
</body>
</html>

<script>    
    var urlObtenerInformacionCliente = '@Url.Action("ObtenerInformacionCliente", "Cliente")';
    var urlMostrarActualizacionDatos = '@Url.Action("MostrarActualizacionDatos", "Cliente")';
    var urlCerrarSesion = '@Url.Action("CerrarSesion", "Cliente")';
    var urlIsSesionAbierta = '@Url.Action("IsSesionAbierta", "Cliente")';    

    var urlObtenerDetalleProducto = '@Url.Action("ObtenerDetalleProducto", "Producto")';
    var urlActualizarEstadoProducto = '@Url.Action("ActualizarEstadoProducto", "Producto")';
</script>
